# Telegram API credentials
TG_API_ID=your_api_id
TG_API_HASH=your_api_hash

# Database configuration
TG_DB_URL=sqlite:///tgstats.db

# Telegram session file
TG_SESSION=tgstats.session

# Channel configuration (выберите один из вариантов)
TG_CHANNEL_USERNAME=channel_name  # Для публичных каналов
TG_CHANNEL_ID=-1001234567890     # Для закрытых каналов (с префиксом -100 или без)
TG_CHANNEL_TITLE=Channel Title    # Название канала для отображения

# Logging configuration
TG_LOG_LEVEL=INFO                # Уровень логирования (DEBUG, INFO, WARNING, ERROR, CRITICAL)
TG_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
TG_LOG_FILE=tgstats.log         # Путь к файлу логов 