# Telegram API credentials
TG_API_ID=your_api_id
TG_API_HASH=your_api_hash

# Database configuration
TG_DB_URL=postgresql://user:password@localhost:5432/tgstats
# или для SQLite (если нужно):
# TG_DB_URL=sqlite:///tgstats.db

# Telegram session file
SESSION_PATH=tgstats.session

# Channel configuration (можно указать несколько через запятую)
TG_CHANNEL_IDS=1234567890,9876543210
# Или использовать юзернейм
TG_CHANNEL_USERNAME=channel_username

# Channel title (опционально)
TG_CHANNEL_TITLE=Channel Title

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=tgstats.log 